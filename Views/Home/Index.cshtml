@{
    ViewData["Title"] = "Home Page";
}
@* Link to specific CSS for this view *@
<link href="~/css/landing_page.css" rel="stylesheet" type="text/css" />

@section Scripts {
    <script src="~/js/landing_page.js"></script>
}

<div class="continer-fluid">
    <!-- Hero Section -->
    <div class="hero">
        <div class="continer-fluid">
            <h1>Welcome to Saudi World Cup 2034</h1>
            <p>The world's biggest football event is coming to Saudi Arabia!</p>
                <!-- Countdown Section -->
            <div class="section text-center md-5">
                <div class="container">
                    <p class="countdown" id="countdown" style="color: #64615e;"></p>
                </div>
            </div>
        </div>
    </div>



    <!-- Key Facts Section -->
    <div class="section bg-light mt-5">
        <div class="container text-center">
            <h2 style="color:#64615e;">Why Saudi World Cup 2034?</h2>
            <p>Get ready for a world-class football event in the heart of the Middle East. Here are some key facts:</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="card hover-effect-card">
                        <img src="~/images/infr.png" class="card-img-top" alt="World Class Infrastructure">
                        <div class="card-body">
                            <h5 class="card-title">World-Class Infrastructure</h5>
                            <p class="card-text">Saudi Arabia is investing heavily in state-of-the-art stadiums and transport systems.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card hover-effect-card">
                        <img src="~/images/cult.jpg" class="card-img-top" alt="Cultural Experience">
                        <div class="card-body">
                            <h5 class="card-title">A Unique Cultural Experience</h5>
                            <p class="card-text">Experience Saudi Arabia's rich culture and hospitality like never before.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card hover-effect-card">
                        <img src="~/images/spat.jpg" class="card-img-top" alt="Global Spectacle">
                        <div class="card-body">
                            <h5 class="card-title">A Global Spectacle</h5>
                            <p class="card-text">Witness the world's best teams compete for glory in a once-in-a-lifetime event.</p>
                        </div>
                    </div>
                </div>


            <div class="col-md-12 d-flex justify-content-center " style="margin-bottom: 5rem; margin-top: 3rem;">
                <a href="https://www.fifa.com/worldcup/" class="btn btn-lg" style="background-color: #64615e; color: aliceblue;">Visit Official FIFA World Cup 2034 Site</a>
            </div>
            </div>
        </div>
    </div>
</div>
