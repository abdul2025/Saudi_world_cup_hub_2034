<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <meta name="description" content="Saudi World Cup 2034 - The Road to Victory">
    <meta name="keywords" content="Saudi Arabia, World Cup, 2034, Football, Fifa">
    <meta name="author" content="Saudi World Cup Hub">
    
    <title>@ViewData["Title"] - Saudi Hub 2034</title>
    <script type="importmap"></script>
    <link rel="icon" href="~/images/Saudi_fifa_cup.svg.webp" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaudiWorldCupHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Saudi_fifa_cup.svg.webp" alt="Worldcup Logo" style="max-height: 50px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ms-2">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Flight" asp-action="Flights" id="nav-flights">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Flight" asp-action="BookingHistory" id="nav-flights">Bookings History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index" id="nav-hotels">Dashboard</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Identity/Account/Logout" id="nav-logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Identity/Account/Login" id="nav-login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Identity/Account/Register" id="nav-register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="continer-fluid">
            @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-white" style="color:aliceblue ">
            &copy; 2025 Saudi World Cup Hub. All rights reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)




</body>
</html>
