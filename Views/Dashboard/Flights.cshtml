@model List<SaudiWorldCupHub.DTO.BookingViewModel>
@{
    ViewData["Title"] = "Flights";
    Layout="~/Views/Shared/_LayoutAdmin.cshtml";

}


<div class="container-fluid ">
    <br>
    <br>

    <div class="row mt-5">
        <h2 class="mb-4">Confirmed Bookings</h2>

        <!-- Bootstrap Table Styling -->
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Confirm ID</th>
                    <th>Reference</th>
                    <th>Creation Date</th>
                    <th>Arrival Date</th>
                    <th>Departure Date</th>
                    <th>Currency</th>
                    <th>Total</th>
                    <th>Departure City</th>
                    <th>Arrival City</th>
                    <th>User Email</th>
                    <th>Travelers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.ConfirmId</td>
                        <td>@booking.Reference</td>
                        <td>@booking.CreationDate.ToString("MM/dd/yyyy")</td>
                        <td>@booking.ArrivalAt.ToString("MM/dd/yyyy")</td>
                        <td>@booking.DepartureAt.ToString("MM/dd/yyyy")</td>
                        <td>@booking.Currency</td>
                        <td>@booking.Total</td>
                        <td>@booking.DepartureCity</td>
                        <td>@booking.ArrivalCity</td>
                        <td>@booking.UserEmail</td>
                        <td>
                            <!-- List of travelers -->
                            <ul class="list-unstyled">
                                @foreach (var traveler in booking.Travelers)
                                {
                                    <li>
                                        <strong>@traveler.Name</strong> - @traveler.Gender (@traveler.DateOfBirth.ToString("MM/dd/yyyy"))
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>